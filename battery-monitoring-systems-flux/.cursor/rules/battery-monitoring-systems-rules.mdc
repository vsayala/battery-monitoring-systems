  # -----------------------------
  # âš™ï¸ Data Engineering & Analytics Best Practices
  # -----------------------------
  - pattern: 'df\s*=\s*spark\.sql\([^)]+\)'
    condition: 'not contains "df.cache()" or "df.count()"'
    message: "âš ï¸ Cache or count the DataFrame to avoid lazy evaluation issues."

  - pattern: '\.collect\(\)'
    message: "âš ï¸ Avoid .collect() on large datasets. Prefer .toLocalIterator() or limit rows."

  - pattern: 'df\.iterrows\(\)'
    message: "âš ï¸ .iterrows() is slow. Use vectorized operations or .itertuples()."

  - pattern: 'read_csv\('
    condition: 'not contains "dtype"'
    message: "ğŸ’¡ Specify dtypes when reading CSVs for memory efficiency and data integrity."

  - pattern: 'pd\.merge\('
    condition: 'not contains "on="'
    message: "ğŸ’¡ Always specify 'on' columns explicitly in merges to avoid ambiguous joins."

  - pattern: '.*'
    condition: 'analytics logic embedded directly in UI code'
    message: "ğŸ“Š Decouple analytics logic from UI. Place analytics functions in a dedicated module."

  - pattern: '.*'
