rules:

  # -----------------------------
  # ğŸ” Security & Compliance Rules
  # -----------------------------
  - pattern: '(["\'])(bolt|https?)://[^"\']*(neo4j|admin|token|apikey|secret|user|pwd)[^"\']*(["\'])'
    message: "âš ï¸ Avoid hardcoded URLs or credentials. Use environment variables or secret managers (e.g., Azure Key Vault, AWS Secrets Manager)."

  - pattern: '(?i)(password|secret|token|apikey)\s*=\s*[\'\"].+[\'\"]'
    message: "âš ï¸ Hardcoded secrets detected. Store secrets securely using environment variables or secret management services."

  - pattern: '(?i)import\s+pickle'
    message: "âš ï¸ Avoid using 'pickle' with untrusted data. Use JSON, YAML, or other safe serialization formats."

  - pattern: '(?i)import\s+eval'
    message: "âš ï¸ Avoid using 'eval' due to security risks. Use safer alternatives."

  - pattern: 'open\s*\(.*[\'\"](config|secret|key|credential)[\'\"].*\)'
    message: "âš ï¸ Sensitive config files should be encrypted and access-controlled."

  - pattern: 'def\s+\w+\(.*\):\n(.*\n)*?.*os\.system\('
    message: "âš ï¸ Avoid os.system for shell commands. Use subprocess with input validation."

  # -----------------------------
  # ğŸ§  Code Maintainability & Documentation
  # -----------------------------
  - pattern: 'def\s+\w+\(.*\):\n(?: {4}.*\n){20,}'
    message: "ğŸ§  Function too long. Split into smaller, testable pieces."

  - pattern: '#\s*TODO'
    message: "ğŸš§ Clear out TODOs before production release."

  - pattern: 'def\s+\w+\(.*\):\n(?!\s+""")'
    message: "ğŸ’¡ Add docstring to describe function purpose, inputs, and outputs."

  - pattern: 'class\s+\w+\(.*\):\n(?!\s+""")'
    message: "ğŸ“š Add class-level docstring to improve documentation."

  - pattern: 'def\s+\w+\(.*\):\n(?!.*print|logger)'
